<header class="header <% if (path === '/secondary') { %> bg-[#292A2E] <% } %>" data-header>
    <div class="container">

      <button class="nav-toggle-btn <%= path === '/secondary' ? 'logo text-white' : ''%>" aria-label="toggle manu" data-nav-toggler>
        <ion-icon name="menu-outline" aria-hidden="true" class="menu-icon"></ion-icon>
        <ion-icon name="close-outline" aria-label="true" class="close-icon"></ion-icon>
      </button>

      <a href="/" class="logo <%= path === '/secondary' ? 'logo text-white' : ''%>">Kitter</a>

      <nav class="navbar" data-navbar>
        <ul class="navbar-list">

          <li class="navbar-item">
            <a href="<%= path === '/secondary' ? '/' : '#'%>" class="navbar-link" data-nav-link>Home</a>
          </li>

          <li class="navbar-item">
            <a href="<%= path === '/secondary' ? '#shop' : '/shop' %>" class="navbar-link" data-nav-link>Shop</a>
          </li>

          <li class="navbar-item">
            <a href="#footer" class="navbar-link" data-nav-link>Contact</a>
          </li>

        </ul>
        <% if (!session.isLoggedIn) { %>
          <a href="/login" class="navbar-action-btn">Log In</a>
          <% } %>
      </nav>

      <div class="header-actions">

        <a href="/shop">
            <button class="action-btn <%= path === '/secondary' ? 'logo text-white' : ''%>" aria-label="Search">
              <ion-icon name="search-outline" aria-hidden="true"></ion-icon>
            </button>
        </a>


        <% if (!session.isLoggedIn) { %>
          <a href="/login">
            <button class="action-btn user <%= path === '/secondary' ? 'logo text-white' : ''%>" aria-label="User">
              <ion-icon name="person-outline" aria-hidden="true"></ion-icon>
            </button>
          </a>
          <a href="/login">
            <button class="action-btn <%= path === '/secondary' ? 'logo text-white' : ''%>" aria-label="cart">
              <ion-icon name="bag-handle-outline" aria-hidden="true"></ion-icon>
    
              <span class="btn-badge">0</span>
            </button>
          </a>
          <% } else { %>
            <a href="/cart">
              <button class="action-btn <%= path === '/secondary' ? 'logo text-white' : ''%>" aria-label="cart">
                <ion-icon name="bag-handle-outline" aria-hidden="true"></ion-icon>
      
                <span class="btn-badge">0</span>
              </button>
            </a>
            <form action="/logout" method="post">
              <button class="action-btn <%= path === '/secondary' ? 'logo text-white' : ''%>" aria-label="logout">
                <ion-icon name="log-out-outline" aria-hidden="true"></ion-icon>
              </button>
            </form>
            <% } %>
      </div>

    </div>
  </header>